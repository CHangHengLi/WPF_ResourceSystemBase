<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 基础颜色定义 - 所有主题通用 -->
    <!-- 这些颜色将被各个主题字典中的同名Key所覆盖 -->
    
    <!-- 主要色调 -->
    <Color x:Key="PrimaryColor">#FF0078D7</Color>           <!-- 默认主题色 - 蓝色 -->
    <Color x:Key="SecondaryColor">#FF107C10</Color>         <!-- 默认次要色 - 绿色 -->
    <Color x:Key="AccentColor">#FFCA5010</Color>            <!-- 默认强调色 - 橙色 -->
    
    <!-- 背景色 -->
    <Color x:Key="WindowBackgroundColor">#FFF8F8F8</Color>  <!-- 窗口背景色 -->
    <Color x:Key="ContentBackgroundColor">#FFFFFFFF</Color> <!-- 内容区背景色 -->
    <Color x:Key="AlternateBackgroundColor">#FFF5F5F5</Color> <!-- 交替背景色 -->
    
    <!-- 文本色 -->
    <Color x:Key="PrimaryTextColor">#FF333333</Color>       <!-- 主要文本色 -->
    <Color x:Key="SecondaryTextColor">#FF666666</Color>     <!-- 次要文本色 -->
    <Color x:Key="DisabledTextColor">#FFAAAAAA</Color>      <!-- 禁用文本色 -->
    <Color x:Key="HeaderTextColor">#FFFFFFFF</Color>        <!-- 标题文本色 -->
    
    <!-- 边框/分隔线色 -->
    <Color x:Key="BorderColor">#FFD8D8D8</Color>            <!-- 边框色 -->
    <Color x:Key="SeparatorColor">#FFEEEEEE</Color>         <!-- 分隔线色 -->
    
    <!-- 状态色 -->
    <Color x:Key="SuccessColor">#FF107C10</Color>           <!-- 成功状态色 -->
    <Color x:Key="WarningColor">#FFFFD335</Color>           <!-- 警告状态色 -->
    <Color x:Key="ErrorColor">#FFE81123</Color>             <!-- 错误状态色 -->
    <Color x:Key="InfoColor">#FF0078D7</Color>              <!-- 信息状态色 -->
    
    <!-- 控件特定色 -->
    <Color x:Key="ButtonBackgroundColor">#FFEEEEEE</Color>
    <Color x:Key="ButtonHoverColor">#FFE0E0E0</Color>
    <Color x:Key="ButtonPressedColor">#FFCCCCCC</Color>
    <Color x:Key="ControlBorderColor">#FFBDBDBD</Color>
    <Color x:Key="SelectedItemColor">#FFDCEAFF</Color>
    <Color x:Key="HoveredItemColor">#FFF5F9FF</Color>
</ResourceDictionary> 