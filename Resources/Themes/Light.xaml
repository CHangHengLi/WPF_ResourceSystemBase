<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 亮色主题特定颜色 - 覆盖Colors.xaml中的基础颜色 -->
    <Color x:Key="PrimaryColor">#FF0078D7</Color>       <!-- 主题色 - 蓝色 -->
    <Color x:Key="SecondaryColor">#FF107C10</Color>     <!-- 次要色 - 绿色 -->
    <Color x:Key="AccentColor">#FFCA5010</Color>        <!-- 强调色 - 橙色 -->
    
    <Color x:Key="WindowBackgroundColor">#FFF8F8F8</Color>
    <Color x:Key="ContentBackgroundColor">#FFFFFFFF</Color>
    <Color x:Key="AlternateBackgroundColor">#FFF5F5F5</Color>
    
    <Color x:Key="PrimaryTextColor">#FF333333</Color>
    <Color x:Key="SecondaryTextColor">#FF666666</Color>
    <Color x:Key="DisabledTextColor">#FFAAAAAA</Color>
    <Color x:Key="HeaderTextColor">#FFFFFFFF</Color>
    
    <Color x:Key="BorderColor">#FFD8D8D8</Color>
    <Color x:Key="SeparatorColor">#FFEEEEEE</Color>
    
    <Color x:Key="ButtonBackgroundColor">#FFEEEEEE</Color>
    <Color x:Key="ButtonHoverColor">#FFE0E0E0</Color>
    <Color x:Key="ButtonPressedColor">#FFCCCCCC</Color>
    <Color x:Key="ControlBorderColor">#FFBDBDBD</Color>
    <Color x:Key="SelectedItemColor">#FFDCEAFF</Color>
    <Color x:Key="HoveredItemColor">#FFF5F9FF</Color>
    
    <!-- 亮色主题特有资源 -->
    <LinearGradientBrush x:Key="HeaderBackgroundBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF0078D7" Offset="0.0" />
        <GradientStop Color="#FF00BCF2" Offset="1.0" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="AccentBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF0078D7" Offset="0.0" />
        <GradientStop Color="#FF005A9E" Offset="1.0" />
    </LinearGradientBrush>
    
    <!-- 材质效果 -->
    <DropShadowEffect x:Key="StandardShadow" BlurRadius="10" ShadowDepth="1" Direction="270" Color="#22000000" Opacity="0.3" />
</ResourceDictionary> 