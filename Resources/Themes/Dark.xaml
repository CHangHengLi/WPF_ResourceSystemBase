<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 暗色主题特定颜色 - 覆盖Colors.xaml中的基础颜色 -->
    <Color x:Key="PrimaryColor">#FF0078D7</Color>       <!-- 保持主题色一致性 -->
    <Color x:Key="SecondaryColor">#FF10893E</Color>     <!-- 调亮次要色以适应暗背景 -->
    <Color x:Key="AccentColor">#FFFE8A00</Color>        <!-- 调亮强调色以适应暗背景 -->
    
    <Color x:Key="WindowBackgroundColor">#FF1F1F1F</Color>
    <Color x:Key="ContentBackgroundColor">#FF2D2D2D</Color>
    <Color x:Key="AlternateBackgroundColor">#FF252525</Color>
    
    <Color x:Key="PrimaryTextColor">#FFFFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#FFBDBDBD</Color>
    <Color x:Key="DisabledTextColor">#FF666666</Color>
    <Color x:Key="HeaderTextColor">#FFFFFFFF</Color>
    
    <Color x:Key="BorderColor">#FF555555</Color>
    <Color x:Key="SeparatorColor">#FF444444</Color>
    
    <Color x:Key="ButtonBackgroundColor">#FF3D3D3D</Color>
    <Color x:Key="ButtonHoverColor">#FF4D4D4D</Color>
    <Color x:Key="ButtonPressedColor">#FF5D5D5D</Color>
    <Color x:Key="ControlBorderColor">#FF5D5D5D</Color>
    <Color x:Key="SelectedItemColor">#FF2A4A7F</Color>
    <Color x:Key="HoveredItemColor">#FF1F354F</Color>
    
    <!-- 暗色主题特有资源 -->
    <LinearGradientBrush x:Key="HeaderBackgroundBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF262C3B" Offset="0.0" />
        <GradientStop Color="#FF0F1B45" Offset="1.0" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="AccentBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF0078D7" Offset="0.0" />
        <GradientStop Color="#FF004275" Offset="1.0" />
    </LinearGradientBrush>
    
    <!-- 材质效果 -->
    <DropShadowEffect x:Key="StandardShadow" BlurRadius="10" ShadowDepth="1" Direction="270" Color="#2BFFFFFF" Opacity="0.2" />
</ResourceDictionary> 